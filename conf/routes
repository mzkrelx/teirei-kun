# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET      /                                            controllers.Application.index

GET      /account/signin                              controllers.Application.showSignIn
GET      /githubauth/callback                         controllers.Application.callBackGitHub(code)


# Program
GET      /programs                                    controllers.Application.listPrograms
POST     /programs                                    controllers.Application.addProgram
GET      /programs/:id                                controllers.Application.showProgram(id: Int)

# Attendance
POST     /programs/:programId/attendances             controllers.Application.addAttendance(programId: Int)
PUT      /programs/:programId/attendances/:personId   controllers.Application.updateAttendance(programId: Int, personId: Int)
DELETE   /programs/:programId/attendances/:personId   controllers.Application.deleteAttendance(programId: Int, personId: Int)

# Javascript routing
GET      /admin/js/routes                             controllers.Application.javascriptRoutes

# Map static resources from the /public folder to the /assets URL path
GET      /assets/*file                                controllers.Assets.at(path="/public", file)
